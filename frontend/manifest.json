{
  "manifest_version": 2,
  "name": "AI Email Responder",
  "version": "1.0",
  "description": "Automatically generates AI responses for emails and saves them as drafts.",
  "icons": {
    "48": "./logo1.png",
    "96": "./logo1.png"
  },
  "applications": {
    "gecko": {
      "id": "myreactaddon@yourdomain.com",
      "strict_min_version": "91.0"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module",
    "persistent": true
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "AI Email Responder",
    "default_icon": "./logo1.png"
  },
  "web_accessible_resources": ["file-picker.html"],
  "permissions": [
    "tabs",
    "storage",
    "messagesRead",
    "compose",
    "accountsRead",
    "compose.save",
    "accountsFolders",
    "activeTab"
  ]
}
